@model ActiveDirectorySearchModel

@{
    Layout = "_Layout";

    var exception = ViewBag.ExceptionByCreation;
}

<!DOCTYPE html>

<html>
<head>
    <title>Поиск внутри домена</title>
</head>
<body>
<div>
    <h1>Поиск:</h1>

    @using (Html.BeginForm("Search", "ActiveDirectory", FormMethod.Post))
    {
        <div>
            <table>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.DistinguishedName)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.EditorFor(model => model.DistinguishedName, new {htmlAttributes = new {@class = "form-control"}})
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.Filter)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.EditorFor(model => model.Filter, new {htmlAttributes = new {@class = "form-control"}})
                    </td>
                </tr>
                <tr>
                    <td>
                        <input id="send_data" type="submit" value="Поиск" oninput="hide()" class="btn btn-dark"/>
                    </td>
                </tr>
                @if (!string.IsNullOrEmpty(exception))
                {
                    <tr>
                        <td>
                            <span id="span_exc" style="color: red" >
                                @exception
                            </span>
                        </td>
                    </tr>
                }
            </table>
        </div>
    }

</div>
</body>
<script>
  window.onload = (event) => {
      console.log("page is fully loaded");
      hide();
    };

    function hide() {
            setTimeout(() => {
                        console.log('feri');
                          
                        const box = document.getElementById('span_exc');
                    
                        // 👇️ removes element from DOM
                        box.style.display = 'none';
                    
                        // 👇️ hides element (still takes up space on page)
                        // box.style.visibility = 'hidden';
                      }, 3000);
    }
          </script>
        
    

</html>
